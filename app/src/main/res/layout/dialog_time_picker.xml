<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootviewtimepicek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="取消"
            android:minWidth="50dp"
            android:textSize="14sp"
            android:gravity="center"
            android:minHeight="40dp"
            android:id="@+id/tv_dialog_time_picker_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:id="@+id/tv_dialog_time_picker_time"
            android:layout_height="match_parent"/>
        <TextView
            android:text="确定"
            android:minWidth="50dp"
            android:id="@+id/tv_dialog_time_picker_sure"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#2391E9"
            android:gravity="center"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:id="@+id/view_line_one"
        android:background="#DCDCDC"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_multiple_cancle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.example.myapplication.loopview.loopviewInface.LoopView
            android:id="@+id/loop_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="年"
            android:textSize="13sp" />

        <com.example.myapplication.loopview.loopviewInface.LoopView
            android:id="@+id/loop_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="月"
            android:textSize="13sp" />

        <com.example.myapplication.loopview.loopviewInface.LoopView
            android:id="@+id/loop_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="日"
            android:textSize="13sp" />

        <com.example.myapplication.loopview.loopviewInface.LoopView
            android:id="@+id/loop_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="时"
            android:textSize="13sp" />

        <com.example.myapplication.loopview.loopviewInface.LoopView
            android:id="@+id/loop_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>